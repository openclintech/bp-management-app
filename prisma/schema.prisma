generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vital {
  id        Int      @id @default(autoincrement())
  type      String
  value     Float?
  systolic  Float?
  diastolic Float?
  timestamp DateTime
}

// Update your model to include the enum
model MedicationEvent {
  id          String              @id @default(uuid())
  timestamp   DateTime
  type        MedicationEventType
  description String

  @@index([timestamp])
}

// Add this enum at the top or in your enums section
enum MedicationEventType {
  MED_ADDED
  ADHOC_DOSE
  ADMIN_LATE
  ADJUSTED
  REPLACED
}
